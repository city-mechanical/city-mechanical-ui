{
  "name": "@city-mechanical/ui",
  "version": "0.0.0-development",
  "description": "A React component library for City Mechanical, Inc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/city-mechanical/city-mechanical-ui.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "rollup -c",
    "start": "start-storybook",
    "dev": "start-storybook -p 6006 || $PORT",
    "prepare": "npm run format && npm run build",
    "commit": "npx git-cz",
    "format": "prettier-eslint --write \"src/**/*.js\" \"src/**/*.mdx\""
  },
  "author": "William Crutchfield",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/city-mechanical/city-mechanical-ui/issues"
  },
  "homepage": "https://github.com/city-mechanical/city-mechanical-ui#readme",
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0",
    "prismjs": "^1.17.x",
    "styled-components": "^4.x"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@rollup/plugin-url": "^4.0.2",
    "@storybook/react": "^6.0.10",
    "@storybook/addon-docs": "^6.0.20",
    "@svgr/rollup": "^5.3.1",
    "cz-conventional-changelog": "^3.1.0",
    "prettier-eslint-cli": "^5.0.0",
    "prismjs": "^1.20.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^1.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-postcss": "^3.1.1",
    "styled-components": "^4.4.1"
  },
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
